<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiTopicSeven.ViewModels"
             x:Class="MauiTopicSeven.Views.EditProfilePage"
             Title="EditProfilePage"
             x:DataType="viewModels:EditProfileViewModel">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Entry
                Text="{Binding Name}"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                Text="Save"
                HorizontalOptions="Center" 
                Command="{Binding SaveCommand}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>